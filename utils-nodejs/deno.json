{
    "version": "0.1.19",
    "name": "@reactive/utils-nodejs",
    "exports": {
        ".": "./index.ts"
    },
    "license": "MIT",
    "lint": {
        "rules": {
            "exclude": [
                "verbatim-module-syntax",
                "no-namespace"
            ]
        }
    },
    "imports": {
        "@types/react": "npm:@types/react@^*",
        "mobx": "npm:mobx@^*",
        "mobx-react-lite": "npm:mobx-react-lite@^*",
        "react": "npm:react@^*",
        "superjson": "npm:superjson@^*",
        "@js-temporal/polyfill": "npm:@js-temporal/polyfill@^*",
        "zod": "npm:zod@^4.0.0",
        "chalk": "npm:chalk@^*"
    },
    "tasks": {
        "check": "deno ./index.ts",
        "test": "deno install && deno test --allow-hrtime --allow-env --v8-flags=\"--expose-gc\" --trace-leaks"
    },
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "deno.window",
            "dom",
            "es6",
            "esnext"
        ]
    }
}